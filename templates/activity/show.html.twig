{% block stylesheets %}
	{{ encore_entry_link_tags('show') }}
{% endblock %}

{% block body %}
    <a class="back" href="{{ path('index') }}"> < Retour</a>
    <section class="details">
        <img src="{{ activity.picture }}" alt="{{ activity.sport.name }}">
